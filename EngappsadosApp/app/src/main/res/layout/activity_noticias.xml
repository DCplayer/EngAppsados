<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dot_dark_screen3"
    tools:context="com.engappsados.engappsadosapp.Noticias">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/pruebaa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adrian_prueba" />

    <EditText
        android:id="@+id/noticia2"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginStart="19dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:text="Conferencistas en Droidcon 2017"
        android:textColor="@color/bg_screen1"
        android:background="@color/dot_light_screen3"
        android:visibility="visible"
        tools:ignore="LabelFor"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/descripcion1"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/noticia1"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:background="@color/dot_light_screen3"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textMultiLine"
        android:text="Guatemaltecos en Google"
        android:textColor="@color/bg_screen1"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        tools:ignore="LabelFor"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/noticia3"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginLeft="-76dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="324dp"
        android:background="@color/dot_light_screen3"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textMultiLine"
        android:text="Guatemaltecos"
        android:textColor="@color/bg_screen1"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />
    <TextView
        android:id="@+id/leerMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leer_mas"
        android:layout_marginStart="78dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/noticia1"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/descripcion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/genio_de_la_informatica_trabajando_en_android"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/conferencista"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/descripcion1" />

    <TextView
        android:id="@+id/leerMas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="14dp"
        android:text="Leer mas"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/noticia2" />

    <TextView
        android:id="@+id/descripcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Maldonado participa en conferencia en Santo Domingo"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
