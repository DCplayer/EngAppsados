<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reward_name"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Reporte de errores" />

            <ImageView
                android:id="@+id/bug_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_android_bug" />


        </LinearLayout>


        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Selecciona el app a resportar" />

        <Spinner
            android:id="@+id/apps_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Escribe una descripcion de lo sucedido" />

        <EditText
            android:id="@+id/textInput_bug"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lines="10"
            android:minLines="10"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:fontFamily="monospace"
            android:hint="@string/Desc"
            android:inputType="textMultiLine"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/enviarError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:text="Enviar" />

    </LinearLayout>

</LinearLayout>